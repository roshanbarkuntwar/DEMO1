<struts>
    <package name="regular.challan.challanVerification" extends="struts-default" namespace="/">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        
        <interceptors>
            <interceptor class="interceptors.LoginInterceptor" name="LoginInterceptor" ></interceptor>            
            <interceptor-stack name="loginStack">
                <interceptor-ref name="LoginInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>            
            <interceptor class="interceptors.ModuleAccessInterceptor" name="moduleAccessInterceptor"></interceptor>
            <interceptor-stack name="moduleAccessStack">
                <interceptor-ref name="params"/>
                <interceptor-ref name="moduleAccessInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="loginStack"/>
        
        <global-results>
            <result name="login">/login.jsp</result>
            <result name="setassessment" type="redirect">setassessment</result>
            <result name="globalError" type="redirect">globalError</result>
            <result name="accessDenied" type="tiles">globalAccessDenied</result>
            <result name="customError" type="tiles">customError</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="globalError" />
        </global-exception-mappings>
        
        <action name="checkCSIStatusForChallan" class="regular.challan.challanVerification.ChallanVerifyCSIStatusAction" method="execute"> 
            <result name="success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        
        <action name="verifyChallanAction" class="regular.challan.challanVerification.ChallanVerificationAction" method="execute"> 
            <result name="success" type="tiles">createFileNew</result>
            <result name="challanVerified" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result> 
            <result name="error" type="tiles">fvuError</result>
        </action>
        
        <action name="challanErrorPage" class="regular.challan.challanVerification.ChallanVerificationErrorsAction" method="execute"> 
            <result name="success" type="tiles">customError</result>
        </action>
        
        <action name="challanUploadCsiAction" class="regular.challan.challanVerification.ChallanUploadCSIAction" method="execute"> 
            <result name="success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
    </package>
</struts>