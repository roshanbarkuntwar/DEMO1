<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">


<!-- Author: ayushi.jain -->

<struts>
    <!-- Add your configuration elements here -->
    <package name="correction.importFile" extends="struts-default" namespace="/">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        
        <interceptors>
            <interceptor class="interceptors.LoginInterceptor" name="LoginInterceptor" ></interceptor>
            
            <interceptor-stack name="loginStack">
                <interceptor-ref name="LoginInterceptor" />
                <!--<interceptor-ref name="DeducteeIncomeDetailsInterceptor" />-->
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
            
            <interceptor class="interceptors.ModuleAccessInterceptor" name="moduleAccessInterceptor"   ></interceptor>
            <interceptor-stack name="moduleAccessStack">
                <interceptor-ref name="params"/>
                <interceptor-ref name="moduleAccessInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>
        
        <default-interceptor-ref name="loginStack"/>
        
        <global-results>
            <result name="loginFailed" type="redirect">login</result>
            <result name="login">/login.jsp</result>
            <result name="setassessment" type="redirect">setassessment</result>
            <result name="globalError" type="redirect">globalError</result>
            <result name="accessDenied" type="tiles">globalAccessDenied</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="globalError" />
        </global-exception-mappings> 
        
        
        
        <action name="corrImportAction" class="correction.importFile.CorrImportFileAction" method="execute">
            <result name="success" type="tiles">corrImport</result>                
            <result name="input" type="tiles">corrImport</result>
            <result name="upload_success" type="redirect">processUploadedFiles?action=browseFileList</result>  
            <result name="upload_failed" type="tiles">corrImport</result>                                   
        </action>
          
        <action name="processUploadedFiles" class="correction.importFile.ProcessUploadedFilesAction" method="execute">
            <result name="success" type="tiles">processUploadedFiles</result>  
            <result name="updated" type="tiles">processUploadedFilesresult</result>
            <result name="input" type="tiles">processUploadedFiles</result>
        </action>
      
        <action name="corrImportDataGridAction" class="correction.importFile.CorrImportDataGridAction" method="execute">
            <result name="success">/WEB-INF/view/jsp/correction/importFile/uploadedFileDateGrid.jsp</result>  
            <result name="input" type="tiles">corrImportDataGridAction</result>
        </action>
        
        <action name="uploadZipFileAjax" class="correction.importFile.CorrImportFileOtherAjaxAction" method="execute">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
    </package>
</struts>

