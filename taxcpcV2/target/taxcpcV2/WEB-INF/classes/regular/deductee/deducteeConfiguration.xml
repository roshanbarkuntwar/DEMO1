<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">


<!-- Author: ayushi.jain -->

<struts>
    <!-- Add your configuration elements here -->
    <package name="regular.deductee" extends="struts-default" namespace="/">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        
        <interceptors>
            <interceptor class="interceptors.LoginInterceptor" name="LoginInterceptor" ></interceptor>
            
            <interceptor-stack name="loginStack">
                <interceptor-ref name="LoginInterceptor" />
                <!--<interceptor-ref name="DeducteeIncomeDetailsInterceptor" />-->
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
            
            <interceptor class="interceptors.ModuleAccessInterceptor" name="moduleAccessInterceptor"   ></interceptor>
            <interceptor-stack name="moduleAccessStack">
                <interceptor-ref name="params"/>
                <interceptor-ref name="moduleAccessInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>
        
        <default-interceptor-ref name="loginStack"/>
        
        <global-results>
            <result name="loginFailed" type="redirect">login</result>
            <result name="login">/login.jsp</result>
            <result name="setassessment" type="redirect">setassessment</result>
            <result name="globalError" type="redirect">globalError</result>
            <result name="accessDenied" type="tiles">globalAccessDenied</result>
            <result name="customError" type="redirect">customError</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="globalError" />
        </global-exception-mappings> 
        
        
        
        <action name="tdsDeductees" class="regular.deductee.DeducteeBrowseAction" method="execute">
            <result name="success" type="tiles">deducteeBrowse</result>    
            <result name="filter_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>      
        </action>
               
        <action name="deducteeDatagridAction" class="regular.deductee.DeducteeDataGridAction" method="execute">
            <result name="grid_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
            <result name="input" type="tiles">deducteeBrowse</result>
            <result name="input_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>      
        </action>
        
        <action name="panVerificationOffline" method="execute" class="regular.deductee.PanVerification.PanVerificationOfflineAction">
            <result name="success" type="tiles">panVerificationOffline</result>
            <result name="text_success" type="redirect">panVerificationOffline</result>
            <result name="ajax_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
            <result name="success_download" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
                <!--<param name="contentType">application/octet-stream</param>-->
                <!--<param name="inputName">inputStream</param>-->
                <!--<param name="contentDisposition">attachment;filename="${downloadedFileName}"</param>-->
                <!--<param name="bufferSize">4096</param>-->
            </result>
            <result name="error" type="redirect">panVerificationOffline</result>
            <result name="drive_error" type="tiles">customError</result>
        </action>
        <action name="panVerificationForText" class="regular.deductee.PanVerification.PanVerificationForTexFileAction" method="execute" >
            <result name="ajax_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        <action name="panVerificationForXML" class="regular.deductee.PanVerification.PanVerificationForXMLFileAction" method="execute" >
            <result name="success_download" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        <action name="deducteePanDetails" class="regular.deductee.PanVerification.DeducteePanDetailsAction" method="execute" >
            <result name="success" type="tiles">deducteePanDetailsBrowse</result>  
            <result name="ajax_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        
    </package>
</struts>

