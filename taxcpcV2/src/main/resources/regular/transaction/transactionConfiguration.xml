<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">


<!-- Author: ayushi.jain -->

<struts>
    <!-- Add your configuration elements here -->
    <package name="regular.transaction" extends="struts-default" namespace="/">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        
        <interceptors>
            <interceptor class="interceptors.LoginInterceptor" name="LoginInterceptor" ></interceptor>
            
            <interceptor-stack name="loginStack">
                <interceptor-ref name="LoginInterceptor" />
                <!--<interceptor-ref name="DeducteeIncomeDetailsInterceptor" />-->
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
            
            <interceptor class="interceptors.ModuleAccessInterceptor" name="moduleAccessInterceptor"   ></interceptor>
            <interceptor-stack name="moduleAccessStack">
                <interceptor-ref name="params"/>
                <interceptor-ref name="moduleAccessInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>
        
        <default-interceptor-ref name="loginStack"/>
        
        <global-results>
            <result name="loginFailed" type="redirect">login</result>
            <result name="login">/login.jsp</result>
            <result name="setassessment" type="redirect">setassessment</result>
            <result name="globalError" type="redirect">globalError</result>
            <result name="accessDenied" type="tiles">globalAccessDenied</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="globalError" />
        </global-exception-mappings> 
        
        
        
        <action name="tdsTransaction" class="regular.transaction.TransactionBrowseAction" method="execute">
        <result name="success" type="tiles">transactionBrowse</result> 
         <result name="filter_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>           
        </action>
        <action name="tdsTransactionEntry" class="regular.transaction.TransactionBrowseAction" method="execute">
            <result name="entry" type="tiles">transactionEntry</result>            
        </action>
        
        <action name="transactionDatagridAction" class="regular.transaction.TransactionDataGridAction" method="execute">
            <result name="grid_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
            <result name="input" type="tiles">transactionBrowse</result>
            <result name="input_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>      
        </action>
        <action name="getTDSCRUDEAction" class="regular.transaction.TransactionCRUDAction" method="execute">
            <!--<interceptor-ref name="fileTranStack" />-->
            <result name="input" type="tiles">transactionEntry</result>
            <result name="deleteSuccess" type="redirect">tdsTransaction</result>
            <result name="success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result> 
        </action> 
        
        <action name="getDataAsAjaxAction" class="regular.transaction.DataListAJAXAction" method="execute">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action> 
        
        <action name="saveSpecialTdsRate" class="regular.transaction.TransactionOtherAjaxAction" method="execute">           
            <result name="success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        <action name="tdsTransactionBridge" class="regular.transaction.TransactionBridgeAction" method="execute">
            <result name="success" type="redirect">tdsTransaction</result>            
        </action>
        
        
    </package>
</struts>

