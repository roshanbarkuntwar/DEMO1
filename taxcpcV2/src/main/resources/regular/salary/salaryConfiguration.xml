<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">


<!-- Author: ayushi.jain -->

<struts>
    <!-- Add your configuration elements here -->
    <package name="regular.salary" extends="struts-default" namespace="/">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        
        <interceptors>
            <interceptor class="interceptors.LoginInterceptor" name="LoginInterceptor" ></interceptor>
            <interceptor-stack name="loginStack">
                <interceptor-ref name="LoginInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
               
            <interceptor class="interceptors.ModuleAccessInterceptor" name="moduleAccessInterceptor"  ></interceptor>
            <interceptor-stack name="moduleAccessStack">
                <interceptor-ref name="params"/>
                <interceptor-ref name="moduleAccessInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>
        
        <default-interceptor-ref name="loginStack"/>
        
        <global-results>
            <result name="login">/login.jsp</result>
            <result name="setassessment" type="redirect">setassessment</result>
            <result name="globalError" type="redirect">globalError</result>
            <result name="accessDenied" type="tiles">globalAccessDenied</result>
            <result name="customError" type="tiles">customError</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="globalError" />
        </global-exception-mappings> 
        
        <!--New Salary module configurations-->
        
        <action name="salaryEntryNew2" class="regular.salaryNew.SalaryEntryAction" method="execute">
            <result name="success" type="tiles">salaryEntryPage2</result>
            <result name="edit_entry" type="tiles">salaryEntryPage2</result>
            <result name="ajax_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        <!--Salary Sevaarth Projection Detasils Configurations-->
        <action name="salarySevaarthProjGrid" class="regular.salaryNew.SalarySevaarthProjGridAction" method="execute">  
            <result name="status_grid" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>    
        
        <action name="sevaarthProjectionDetails" class="regular.salaryNew.SalarySevaarthProjectionAction" method="execute">
            <result name="success" type="tiles">salarySevaarthProj</result>
            
        </action>
        
        <action name="salaryBrowseNew" class="regular.salaryNew.SalaryBrowseAction" method="execute">
            <result name="error" type="tiles">customError</result>
            <result name="success" type="tiles">salaryBrowsePage</result>
            <result name="filter_success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        
        <action name="salaryDataGridNew" class="regular.salaryNew.SalaryGridNew" method="execute">
            <result name="ajax_result" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        
        <action name="salryTranLoadAjaxNew" class="regular.salaryNew.SalaryTranLoadSupport" method="execute">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>             
            <result name="redirectSuccess" type="redirect">salaryBrowseNew</result>
        </action>
        <!--New Salary module configurations-->
                        
    </package>

</struts>

